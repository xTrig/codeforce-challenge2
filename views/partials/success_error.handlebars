<div class="col-sm-4 text-center mx-auto">
    {{#if error_msg}}
        <div class="alert alert-danger" role="alert">
            {{error_msg}}
        </div>
    {{/if}}
    {{#if success_msg}}
        <div class="alert alert-success" role="alert">
            {{success_msg}}
        </div>
    {{/if}}
</div>